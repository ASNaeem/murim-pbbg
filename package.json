{
  "name": "murim-game",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.7.1",
  "scripts": {
    "lint": "eslint --ext .ts,.tsx apps packages",
    "format": "prettier --write \"apps/**/*.{ts,tsx,js,json,md}\" \"packages/**/*.{ts,tsx,js,json,md}\"",
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server dev",
    "test": "jest"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "7.15.0",
    "@typescript-eslint/parser": "7.15.0",
    "eslint": "9.7.0",
    "jest": "^30.0.5",
    "prettier": "3.3.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "typescript": "5.5.4"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@prisma/client": "5.15.0",
    "bcrypt": "5.1.1",
    "jsonwebtoken": "9.0.2",
    "prisma": "5.15.0"
  }
}
